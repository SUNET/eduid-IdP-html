{% extends "base.jinja2" %}

{% block nav_class_home %}active{% endblock %}

{% block contents %}

      <div id="content-block">
        <div class="jumbotron">

          <legend class="">{{ _("Credential expired") }}</legend>

          {% trans %}
          <p>The password has expired, because it had not been used in 18 months.</p>
	  <p>To regain access to your account, you need to reset it.</p>
	  {% endtrans %}

	  <div class="form-actions" style="margin-bottom: 0;">
            <!-- Button -->
            <span>
              <button class="btn btn-primary btn-large">{{ _("Reset password") }}</button>
            </span>
            <span>
              <a class="btn btn-warning btn-large" href="{{ settings.password_reset_link }}" target="_blank"></a>
            </span>
          </div>
        </div>
      </div>

{% endblock %}
